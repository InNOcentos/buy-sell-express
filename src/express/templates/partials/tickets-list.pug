section.tickets-list
  h2.visually-hidden Самые новые предложения
  .tickets-list__wrapper
    .tickets-list__header
      p.tickets-list__title Самое свежее
    ul
      each offer, index in offers
        li.tickets-list__item
          .ticket-card.ticket-card--color01
            .ticket-card__img
              img(src="/img/" + offer.picture srcset="/img/" + `${offer.picture} 2x` alt="Изображение товара")
            .ticket-card__info
              span.ticket-card__label
                if offer.type === 'sell'
                  | Продам
                else if offer.type === 'buy'
                  | Куплю
              .ticket-card__categories
                each category,index in offer.category
                  a(href = `#`) #{category}
              .ticket-card__header
                h3.ticket-card__title
                  a(href=`/offers/${offer.id}`) #{offer.title}
                p.ticket-card__price
                  span.js-sum #{offer.sum}
                  |  ₽
              .ticket-card__desc
                p #{offer.description}