extends layout.pug

block content
  main.page-content
    section.login
      form.login__form.form(action="/login" method="post")
        .login__title
          a.login__link(href="/sign-up") Регистрация
          h2 Вход
        .form__field.login__field
          input#user-email.js-field(type="email" name="user_email", value=(userData && userData.email  ? userData.email : ``) required="")
          label(for="user_email") Эл. почта
          if errorsArr
            each errorObj in errorsArr
              if errorObj.path[0] == `email`
                div #{errorObj.message}
          if userNotFound 
            div  #{userNotFound}
        .form__field.login__field
          input#user-password.js-field(type="password" name="user_password" required="")
          label(for="user_password") Пароль
          if errorsArr
            each errorObj in errorsArr
              if errorObj.path[0] == `password`
                div(style="margin-top: -10px;") #{errorObj.message}
        button.login__button.btn.btn--medium.js-button(type="submit" disabled="") Войти